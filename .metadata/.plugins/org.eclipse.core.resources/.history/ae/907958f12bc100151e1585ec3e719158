package modelo;

public class Triangulos implements Operaciones {

	public double area(double lt1, double lt2) {
		return (lt1 * lt2) / 2;
	}
	/**
	 * 
	 * @param lt1
	 * @return 3*lt1
	 */
	public double ptEquilatero(double lt1) {
		return 3 * lt1;
	}
	
	/**
	 * 
	 * @param lt1, t2
	 * @return (lt1 * 2) + lt2
	 */
	public double ptIsoceles(double lt1, double lt2) {
		return (lt1 * 2) + lt2;
	}
	
	/**
	 * 
	 * @param n1
	 * @return n1 + n2 + n3
	 */
	public double ptEscaleno(double n1, double n2, double n3) {
		return n1 + n2 + n3;
	}
}
